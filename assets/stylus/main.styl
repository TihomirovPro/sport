@import 'base/colors'
// @import 'base/reset'
@import 'base/icons'

*
*:before
*:after
  margin 0
  padding 0
  box-sizing border-box
  font-weight inherit
  line-height inherit
  color inherit
  -webkit-touch-callout: none
  -webkit-text-size-adjust: none
  -webkit-tap-highlight-color: rgba(0,0,0,0)
  -webkit-user-select: none

  &:focus
    outline 0
    background 0

html
body
  width 100%
  height 100%

#__nuxt
  height 100%
