*
*:before
*:after
  margin 0
  padding 0
  box-sizing border-box
  font-weight inherit
  line-height inherit
  color inherit

  &:focus
    outline 0
    background 0

html
body
  width 100%
  height 100%
  font-weight normal
  font-size 14px
  color var(--color-text)
  font-family 'Open Sans', sans-serif
  line-height 120%
  background-color var(--color-main-bg)
  -webkit-text-size-adjust 100%
  text-rendering optimizeLegibility
  overflow hidden

#__nuxt
  height 100%

a
  background-color transparent
  text-decoration none

ul
  list-style-type none

img
  border-style none
  vertical-align middle

textarea
  overflow auto
  max-width 100%

button
input
  overflow visible

button
select
  text-transform none

button
[type="button"]
[type="reset"]
[type="submit"]
  cursor pointer
  -webkit-appearance button

  &:focus
    outline 0
    background 0

button
input
optgroup
select
textarea
  font inherit
  font-size inherit
  font-family inherit
  letter-spacing inherit
  color inherit
  line-height 120%
  border none
  border-radius 0
  box-shadow none
  background-color transparent

::-webkit-file-upload-button
  font inherit
  -webkit-appearance button

b
strong
  font-weight bold
